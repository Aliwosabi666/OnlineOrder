<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
   android:layout_marginTop="5dp"

    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"

            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/image_talior_circle"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorAccent"
                />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:text="User Name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"></TextView>

                    <TextView
                        android:id="@+id/users_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="This is Demo Name"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:text="phone user"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"></TextView>

                    <TextView
                        android:id="@+id/phone_number_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"

                        android:text="This is prenom"
                        android:textColor="#000"
                        android:textSize="17sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:text="Status Acount"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"></TextView>

                    <TextView
                        android:id="@+id/user_status"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="This is Adresse"
                        android:textColor="#4B718F"
                        android:textSize="17sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:text="Type Acount"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"></TextView>

                    <TextView
                        android:id="@+id/type_acoutn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="This is Adresse"
                        android:textColor="#010D4E"
                        android:textSize="17sp"
                        />


                </LinearLayout>






                <TextView
                    android:id="@+id/emailtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="This is Email"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/coor_gpstext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Coor gps"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:visibility="gone"

                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout

                android:layout_width="20dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_account_box_24"
                android:layout_gravity="center"

                android:layout_margin="10dp"

                android:layout_weight="0.5"
                android:gravity="center">


            </LinearLayout>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editicon"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:src="@drawable/edit" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/deleteicon"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>